# Example environment variables for help-me-post.
# Copy to `.env` for local use (do not commit real secrets).

# OpenAI API key (required for real AI calls; without it the app returns stub results)
OPENAI_API_KEY=

# Default model name.
# Note: the app reads OPENAI_MODEL; keep DEFAULT_MODEL and OPENAI_MODEL in sync.
DEFAULT_MODEL=gpt-4o-mini
OPENAI_MODEL=gpt-4o-mini

# Optional: max upload size in MB.
# Note: the app enforces MAX_CONTENT_LENGTH in bytes; set that if you need a hard limit.
MAX_UPLOAD_MB=512
# MAX_CONTENT_LENGTH=536870912

# --- Builder UI defaults & suggestions ---
# Comma-separated lists (or JSON arrays) used to render clickable suggestions.
HMP_AUDIENCE_SUGGESTIONS=indie devs, makers, founders, developers
HMP_TAG_SUGGESTIONS=buildinpublic, indiedev, flask, python, webdev
HMP_TONE_SUGGESTIONS=Informative, Excited, Cozy, Funny, Serious

# Default switch states on the landing Post Builder.
HMP_DEFAULT_TEMPLATE_MODE=0
HMP_DEFAULT_ADD_EMOJIS=0
HMP_DEFAULT_INCLUDE_CTA=0

# Default CTA destination (used to prefill the CTA input).
HMP_DEFAULT_CTA_TARGET=@your-handle
